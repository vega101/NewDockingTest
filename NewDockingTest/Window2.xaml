<Window x:Class="Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    Title="Window2" Height="500" Width="600">
    <Window.Resources>
        
        <Grid x:Key="OneTest">
            <TextBlock Text="One Content"></TextBlock>
        </Grid>

        <Grid x:Key="TwoTest">
            <TextBlock Text="Two Content"></TextBlock>
        </Grid>

        <Grid x:Key="ThreeTest">
            <TextBlock Text="Three Content"></TextBlock>
        </Grid>

    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <Button Background="Red" Height="100" Width="100" HorizontalAlignment="Left">Layout</Button>
            <Button Background="Green" Height="100" Width="100" Margin="0,10,0,0" HorizontalAlignment="Left">Chart</Button>
            <Button Background="Blue" Height="100" Width="100" Margin="0,10,0,0" HorizontalAlignment="Left">Control</Button>
        </StackPanel>
        
        <Grid Grid.Column="1">
            <ContentControl ></ContentControl>
            
            
        </Grid>
        
    </Grid>
</Window>
